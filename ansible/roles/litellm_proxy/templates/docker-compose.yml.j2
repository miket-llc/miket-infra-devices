# {{ ansible_managed }}
version: "3.9"

services:
  litellm:
    image: litellm/litellm:{{ litellm_version }}
    container_name: litellm
    env_file:
      - {{ litellm_env_path }}
    command: --config {{ litellm_config_path }} --port {{ litellm_port }}
    network_mode: host
    volumes:
      - {{ litellm_config_path }}:{{ litellm_config_path }}:ro
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "python3 -c \"import socket; s = socket.socket(socket.AF_INET, socket.SOCK_STREAM); s.settimeout(2); result = s.connect_ex(('127.0.0.1', {{ litellm_port }})); s.close(); exit(0 if result == 0 else 1)\" || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 15s

