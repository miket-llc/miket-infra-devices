# Host: {{ inventory_hostname }}
# Generated: {{ ansible_date_time.iso8601 | default('unknown') }}
#
# This collector uses nvidia-smi to monitor Nvidia GPUs.
# Documentation: https://learn.netdata.cloud/docs/collecting-metrics/hardware/nvidia-gpu

# =============================================================================
# NVIDIA GPU MONITORING
# =============================================================================

{% if netdata_enable_nvidia_gpu | bool %}
jobs:
  - name: nvidia_smi
    # Update interval in seconds
    update_every: 1
    # Use CSV format for faster parsing (recommended)
    use_csv_format: no
    # Path to nvidia-smi binary (auto-detected if not set)
    # binary_path: /usr/bin/nvidia-smi
{% else %}
# Nvidia GPU monitoring is disabled
# To enable, set netdata_enable_nvidia_gpu: true in host_vars
jobs: []
{% endif %}

