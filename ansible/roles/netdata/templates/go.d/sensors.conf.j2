# Netdata Linux Sensors Collector Configuration
# Managed by Ansible - Do not edit manually
# {{ ansible_managed }}
#
# Host: {{ inventory_hostname }}
# Generated: {{ ansible_date_time.iso8601 | default('unknown') }}
#
# This collector reads hardware sensors via sysfs/lm-sensors.
# Documentation: https://learn.netdata.cloud/docs/collecting-metrics/hardware/linux-sensors

# =============================================================================
# LINUX HARDWARE SENSORS
# =============================================================================

{% if netdata_enable_linux_sensors | bool %}
jobs:
  - name: sensors
    # Update interval in seconds
    update_every: 1
    # Auto-detection is enabled by default
    # Netdata will find all sensors in /sys/class/hwmon/
{% else %}
# Linux sensors monitoring is disabled
# To enable, set netdata_enable_linux_sensors: true in host_vars
jobs: []
{% endif %}

