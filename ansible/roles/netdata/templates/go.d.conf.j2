# Netdata go.d.plugin Configuration
# Managed by Ansible - Do not edit manually
# {{ ansible_managed }}
#
# Host: {{ inventory_hostname }}
# Generated: {{ ansible_date_time.iso8601 | default('unknown') }}
#
# This file controls which go.d collectors are enabled.
# Collector-specific configs are in /etc/netdata/go.d/

# =============================================================================
# ENABLED COLLECTORS
# =============================================================================

# Default collectors (enabled by Netdata by default)
default_run: yes

# Enable/disable specific collectors based on Ansible variables
modules:
{% if netdata_enable_nvidia_gpu | bool %}
  # Nvidia GPU monitoring via nvidia-smi
  nvidia_smi: yes
{% else %}
  nvidia_smi: no
{% endif %}

{% if netdata_enable_linux_sensors | bool %}
  # Linux hardware sensors (temps, fans, voltages)
  sensors: yes
{% else %}
  sensors: no
{% endif %}

{% if netdata_enable_litellm_prometheus | bool %}
  # Prometheus endpoint collector (for LiteLLM and other apps)
  prometheus: yes
{% else %}
  prometheus: no
{% endif %}

  # System collectors (usually auto-enabled)
  systemdunits: yes
  logind: yes

{% if ansible_system == 'Linux' %}
  # Linux-specific collectors
  chrony: yes
  nvme: yes
  smartctl: yes
{% endif %}

