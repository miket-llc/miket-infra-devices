#!/bin/bash
# VNC connection helper script for macOS
# Usage: vnc HOSTNAME [PORT]
# Password for motoko: motoko123

HOST="${1:-motoko}"
PORT="${2:-5900}"

# Use short hostname - Tailscale MagicDNS handles resolution via search domains
TARGET="${HOST}.pangolin-vega.ts.net:${PORT}"

# Use built-in Screen Sharing app (will prompt for password)
echo "Connecting to ${TARGET}"
echo "Password: motoko123"
open "vnc://${TARGET}"

