# Alacritty configuration for basecamp node
# Managed by Ansible - basecamp_ui role

[font]
size = 11.0

[font.normal]
family = "JetBrainsMonoNL Nerd Font Mono"
style = "Regular"

[font.bold]
family = "JetBrainsMonoNL Nerd Font Mono"
style = "Bold"

[font.italic]
family = "JetBrainsMonoNL Nerd Font Mono"
style = "Italic"

[font.bold_italic]
family = "JetBrainsMonoNL Nerd Font Mono"
style = "Bold Italic"

[window]
padding = { x = 4, y = 4 }
decorations = "None"

[scrolling]
history = 10000

[cursor]
style = { shape = "Block", blinking = "On" }
